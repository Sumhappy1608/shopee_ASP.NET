
@model List<csdlnc_shopee.Models.HANGHOA>

@foreach (var product in Model)
{
    <!-- Start Single List  -->
    <div class="single-list">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="list-image overlay">
                    <img src="@product.HINHANH" alt="#">
                    <a href="Home/ProductDetail?productID=@product.MAHANGHOA" class="buy"><i class="fa fa-shopping-bag"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12 no-padding">
                <div class="content">
                    <h5 class="title"><a href="Home/ProductDetail?productID=@product.MAHANGHOA">@product.TENHANGHOA</a></h5>
                    <p class="price with-discount">VND @product.GIATHANH</p>
                </div>
            </div>
        </div>
    </div>
    <!-- End Single List  -->
}